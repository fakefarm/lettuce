<p id="notice"><%= notice %></p>

<h1>Listing Streams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Estimate</th>
      <th>Auto allocate</th>
      <th>Equity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streams.each do |stream| %>
      <tr>
        <td><%= stream.name %></td>
        <td><%= stream.amount %></td>
        <td><%= stream.estimate %></td>
        <td><%= stream.auto_allocate %></td>
        <td><%= stream.equity_id %></td>
        <td><%= stream.user_id %></td>
        <td><%= link_to 'Show', stream %></td>
        <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
        <td><%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

