<p id="notice"><%= notice %></p>

<h1>Listing Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.name %></td>
        <td><%= preference.user_id %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.family_id %>
  <p>
    Part of the <%= current_user.family.name %>
  </p>
<% else %>
  <%= link_to 'start a family', new_family_path %>
<% end %>
