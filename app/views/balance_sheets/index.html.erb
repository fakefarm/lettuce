<p id="notice"><%= notice %></p>

<h1>Listing Balance Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Timeline</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balance_sheets.each do |balance_sheet| %>
      <tr>
        <td><%= balance_sheet.timeline %></td>
        <td><%= balance_sheet.user_id %></td>
        <td><%= link_to 'Show', balance_sheet %></td>
        <td><%= link_to 'Edit', edit_balance_sheet_path(balance_sheet) %></td>
        <td><%= link_to 'Destroy', balance_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

