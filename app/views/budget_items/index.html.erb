<p id="notice"><%= notice %></p>

<h1>Listing Budget Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Frequency</th>
      <th>Target price</th>
      <th>Category</th>
      <th>Structure</th>
      <th>Reminder</th>
      <th>User</th>
      <th>Family</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= budget_item.name %></td>
        <td><%= budget_item.frequency %></td>
        <td><%= budget_item.target_price %></td>
        <td><%= budget_item.category_id %></td>
        <td><%= budget_item.structure %></td>
        <td><%= budget_item.reminder_id %></td>
        <td><%= budget_item.user_id %></td>
        <td><%= budget_item.family_id %></td>
        <td><%= link_to 'Show', budget_item %></td>
        <td><%= link_to 'Edit', edit_budget_item_path(budget_item) %></td>
        <td><%= link_to 'Destroy', budget_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

