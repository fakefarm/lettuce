<p id="notice"><%= notice %></p>

<h1>Listing Budget Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Frequency</th>
      <th>Target price</th>
      <th>Category</th>
      <th>Structure</th>
      <th>Reminder</th>
      <th>User</th>
      <th>Family</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.name %></td>
        <td><%= expense.frequency %></td>
        <td><%= expense.target_price %></td>
        <td><%= expense.category_id %></td>
        <td><%= expense.structure %></td>
        <td><%= expense.reminder_id %></td>
        <td><%= expense.user_id %></td>
        <td><%= expense.family_id %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

