<h1>Listing Profit Loss Statements</h1>

<table>
  <thead>
    <tr>
      <th>Timeline</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profit_loss_statements.each do |profit_loss_statement| %>
      <tr>
        <td><%= profit_loss_statement.timeline %></td>
        <td><%= profit_loss_statement.user_id %></td>
        <td><%= link_to 'Show', profit_loss_statement %></td>
        <td><%= link_to 'Edit', edit_profit_loss_statement_path(profit_loss_statement) %></td>
        <td><%= link_to 'Destroy', profit_loss_statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

