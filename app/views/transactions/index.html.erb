<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Vendor</th>
      <th>Amount</th>
      <th>Book</th>
      <th>Flag</th>
      <th>Note</th>
      <th>Task</th>
      <th>Comment</th>
      <th>User</th>
      <th>Family</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.account_id %></td>
        <td><%= transaction.vendor_id %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.book_id %></td>
        <td><%= transaction.flag_id %></td>
        <td><%= transaction.note_id %></td>
        <td><%= transaction.task_id %></td>
        <td><%= transaction.comment %></td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.family_id %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

